{
  "manifest_version": 3,
  "name": "B站倍速增强",
  "version": "1.0",
  "description": "增强哔哩哔哩视频播放器的倍速功能",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/bili-boost-icon.png",
      "48": "images/bili-boost-icon.png",
      "128": "images/bili-boost-icon.png"
    }
  },
  "icons": {
    "16": "images/bili-boost-icon.png",
    "48": "images/bili-boost-icon.png",
    "128": "images/bili-boost-icon.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.bilibili.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}
